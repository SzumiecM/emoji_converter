#:kivy 2.0.0

#:set black (0, 0, 0, 1)
#:set button_blue (0.3, 0.4, 1, 1)

<MainScreen>:
    BoxLayout:
        orientation: 'vertical'
        padding: 10
        canvas:
            Color:
                rgb: (1, 1, 1)
            Rectangle:
                pos: self.pos
                size: self.size

        Label:
            text: 'Main'
            color: black
            size_hint_y: 0.2

        BoxLayout:
            orientation: 'horizontal'
            size_hint_y: 0.8
            Label:
                size_hint_x: 0.2
            Image:
                source: 'test.png'
                size_hint_x: 0.6
            Label:
                size_hint_x: 0.2

<AvatarCreationScreen>
    BoxLayout:
        orientation: 'vertical'
        padding: 10
        canvas:
            Color:
                rgb: (1, 1, 1)
            Rectangle:
                pos: self.pos
                size: self.size

        Label:
            text: 'Avatar'
            color: black
            size_hint_y: 0.2

        BoxLayout:
            orientation: 'horizontal'
            size_hint_y: 0.2
            padding: 20

            Button:
                id: btn_man
                text: 'man'

            Button:
                id: btn_woman
                text: 'woman'

        BoxLayout:
            orientation: 'horizontal'
            size_hint_y: 0.6

            BoxLayout:
                orientation: 'vertical'

                Button:
                    id: btn_hair_left
                    text: '<'
                Button:
                    id: btn_eyes_left
                    text: '<'
                Button:
                    id: btn_base_left
                    text: '<'

            Image:
                id: image_avatar

            BoxLayout:
                orientation: 'vertical'

                Button:
                    id: btn_hair_right
                    text: '>'
                Button:
                    id: btn_eyes_right
                    text: '>'
                Button:
                    id: btn_base_right
                    text: '>'

<CameraScreen>
    BoxLayout:
        orientation: 'vertical'
        padding: 10
        canvas:
            Color:
                rgb: (1, 1, 1)
            Rectangle:
                pos: self.pos
                size: self.size

        BoxLayout:
            orientation: 'horizontal'
            padding: 10

            Label:
                size_hint_x: 0.3

            BoxLayout:
                orientation: 'vertical'
                size_hint_x: 0.4

                Label:
                    id: label
                    color: black
                    size_hint_y: 0.2

                Image:
                    id: image_avatar
                    size_hint_y: 0.4

                Image:
                    id: image_camera
                    size_hint_y: 0.4

            Label:
                size_hint_x: 0.3

        Button:
            text: 'Save'
            size_hint_y: 0.2
            background_normal: ''
            background_color: button_blue
            on_press:
                root.update_with_emotion()