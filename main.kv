#:kivy 2.0.0

#:set black (0, 0, 0, 1)

<MainScreen>:
    BoxLayout:
        orientation: 'vertical'
        padding: 10
        canvas:
            Color:
                rgb: (1, 1, 1)
            Rectangle:
                pos: self.pos
                size: self.size

        Label:
            text: 'EmojIT'
            color: black
            size_hint_y: 0.2
            font_size: 50

        BoxLayout:
            orientation: 'horizontal'
            size_hint_y: 0.8
            Label:
                size_hint_x: 0.2
            Image:
                id: image_avatar
                size_hint_x: 0.6
            Label:
                size_hint_x: 0.2

<AvatarCreationScreen>
    BoxLayout:
        orientation: 'vertical'
        padding: 10
        canvas:
            Color:
                rgb: (1, 1, 1)
            Rectangle:
                pos: self.pos
                size: self.size

        Label:
            text: 'Avatar'
            color: black
            size_hint_y: 0.2
            font_size: 50

        BoxLayout:
            orientation: 'horizontal'
            size_hint_y: 0.2
            padding: 20

            Button:
                text: 'man'
                background_color: black
                font_size: 50
                on_press:
                    root.avatar.choose_man()

            Button:
                text: 'woman'
                background_color: black
                font_size: 50
                on_press:
                    root.avatar.choose_woman()

        BoxLayout:
            orientation: 'horizontal'
            size_hint_y: 0.6

            BoxLayout:
                orientation: 'vertical'

                Button:
                    text: '<'
                    background_color: black
                    font_size: 50
                    on_press:
                        root.avatar.hair_left()
                Button:
                    text: '<'
                    background_color: black
                    font_size: 50
                    on_press:
                        root.avatar.eyes_left()
                Button:
                    text: '<'
                    background_color: black
                    font_size: 50
                    on_press:
                        root.avatar.base_left()

            Image:
                id: image_avatar

            BoxLayout:
                orientation: 'vertical'

                Button:
                    text: '>'
                    background_color: black
                    font_size: 50
                    on_press:
                        root.avatar.hair_right()
                Button:
                    text: '>'
                    background_color: black
                    font_size: 50
                    on_press:
                        root.avatar.eyes_right()
                Button:
                    text: '>'
                    background_color: black
                    font_size: 50
                    on_press:
                        root.avatar.base_right()

<CameraScreen>
    BoxLayout:
        orientation: 'vertical'
        padding: 10
        canvas:
            Color:
                rgb: (1, 1, 1)
            Rectangle:
                pos: self.pos
                size: self.size

        BoxLayout:
            orientation: 'horizontal'
            padding: 10

            Label:
                size_hint_x: 0.3

            BoxLayout:
                orientation: 'vertical'
                size_hint_x: 0.4

                Label:
                    id: label
                    color: black
                    size_hint_y: 0.2
                    font_size: 50

                Image:
                    id: image_avatar
                    size_hint_y: 0.4

                Image:
                    id: image_camera
                    size_hint_y: 0.4

            Label:
                size_hint_x: 0.3

        Button:
            text: 'Save'
            size_hint_y: 0.2
            font_size: 50
            background_color: black
            on_press:
                root.camera.save()