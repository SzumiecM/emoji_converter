<CameraScreen>
    BoxLayout:
        orientation: 'vertical'
        padding: 10
        canvas:
            Color:
                rgb: (1, 1, 1)
            Rectangle:
                pos: self.pos
                size: self.size

        BoxLayout:
            orientation: 'horizontal'
            padding: 10

            Label:
                size_hint_x: 0.3

            BoxLayout:
                orientation: 'vertical'
                size_hint_x: 0.4

                Image:
                    id: image_avatar
                    size_hint_y: 0.4

                Image:
                    id: image_camera
                    size_hint_y: 0.4

            Label:
                size_hint_x: 0.3

        Button:
            text: 'Save'
            size_hint_y: 0.2
            background_normal: ''
            background_color: button_blue
            on_press:
                root.update_with_emotion()