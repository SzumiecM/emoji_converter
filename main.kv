<MainScreen>:
    BoxLayout:
        orientation: 'vertical'
        padding: 10
        canvas:
            Color:
                rgb: (1, 1, 1)
            Rectangle:
                pos: self.pos
                size: self.size

        Label:
            text: 'Main'
            color: black
            size_hint_y: 0.2

        BoxLayout:
            orientation: 'horizontal'
            size_hint_y: 0.8
            Label:
                size_hint_x: 0.2
            Image:
                source: 'img/kotek.jpg'
                size_hint_x: 0.6
            Label:
                size_hint_x: 0.2

